@model IEnumerable<AppDev3A.Models.VM>

@{
    /**/

    ViewBag.Title = "Index";
}

<head>
    <link href="~/Styles/ViewModelStyle.css" rel="stylesheet" type="text/css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Students</h5>
        <div class="row">

            @foreach (var item in Model)
            {

                <!-- Team member -->
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <p><img class=" img-fluid" src=@item.URI alt="card image"></p>
                                        <h4 class="card-title">@item.Name @item.Surname (@item.StudentNumber)</h4>
                                        <p class="card-text">@item.Email</p>
                                        <p class="card-text">Status:@item.isActive</p>

                                        <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center mt-4">
                                        <h4 class="card-title">@item.Name @item.Surname (@item.StudentNumber)                  </h4>
                                        <p class="card-text"> @item.Email</p>
                                        <p class="card-text"> @item.CellphoneNumber</p>
                                        <p class="card-text"> @item.TelephoneNumber</p>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <input class="btn-success" value=" Update Details" type="button" onclick="location.href='@Url.Action("Edit","Student", new {id=item.StudentNumber })'" />
                                            </li>
                                        </ul>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <input class="btn-danger" value="Delete Student" type="button" onclick="location.href='@Url.Action("Delete","VM", new {id=item.StudentNumber })'" />
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>